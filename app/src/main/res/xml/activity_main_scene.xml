<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/transaction1"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/recycleview"
            motion:dragDirection="dragUp"
            motion:touchAnchorSide="top" />
    </Transition>
    <Transition
        android:id="@+id/transaction2"
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnClick motion:clickAction="transitionToEnd" motion:targetId="@+id/search"/>
    </Transition>

    <Transition
        android:id="@+id/transaction3"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/end2"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnClick motion:clickAction="transitionToEnd" motion:targetId="@+id/ivBack"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            android:alpha="100" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/imageView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:id="@+id/TitleText" />
        <Constraint
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:alpha="100"
            motion:layout_constraintTop_toBottomOf="@id/TitleText"
            android:layout_marginTop="@dimen/dp10" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/imageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/TitleText"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            android:alpha="0" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end2" >

        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/TitleText"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0"
            motion:layout_constraintTop_toBottomOf="@id/TitleText"
            android:layout_marginTop="@dimen/dp10" />
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>